<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<AnchorPane minHeight="800.0" minWidth="1280.0" prefHeight="800.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/9"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="fr.polytech.ihm.IncidentController">
    <children>
        <BorderPane AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
                    AnchorPane.topAnchor="0.0">
            <top>
                <BorderPane maxHeight="50.0" prefHeight="50.0" BorderPane.alignment="CENTER">
                    <left>
                        <HBox alignment="CENTER" fillHeight="false" spacing="4.0" BorderPane.alignment="CENTER">
                            <children>
                                <TextField prefWidth="200.0" text="Search"/>
                                <ComboBox fx:id="categoryIncident" prefWidth="150.0" promptText="Categorie"/>
                                <ComboBox fx:id="locationIncident" prefWidth="150.0" promptText="Localisation"/>
                                <ComboBox fx:id="resolutionIncident" prefWidth="150.0" promptText="Résolution"/>
                            </children>
                        </HBox>
                    </left>
                    <right>
                        <Button fx:id="userButton" mnemonicParsing="false" onAction="#accessUserData" text="User"
                                BorderPane.alignment="CENTER"/>
                    </right>
                    <padding>
                        <Insets left="16.0" right="16.0"/>
                    </padding>
                    <top>
                        <Label text="Liste des incidents" BorderPane.alignment="CENTER">
                            <font>
                                <Font size="24.0"/>
                            </font>
                            <BorderPane.margin>
                                <Insets bottom="16.0"/>
                            </BorderPane.margin>
                        </Label>
                    </top>
                    <BorderPane.margin>
                        <Insets top="16.0"/>
                    </BorderPane.margin>
                    <center>
                        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="200.0" prefWidth="200.0"/>
                    </center>
                </BorderPane>
            </top>
            <center>
                <AnchorPane BorderPane.alignment="CENTER">
                    <children>
                        <ScrollPane fitToHeight="true" fitToWidth="true" AnchorPane.bottomAnchor="0.0"
                                    AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                            <content>
                                <VBox alignment="TOP_CENTER" prefWidth="600.0">
                                    <children>
                                        <GridPane maxWidth="600.0" prefWidth="600.0">
                                            <columnConstraints>
                                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0"/>
                                            </columnConstraints>
                                            <rowConstraints>
                                                <RowConstraints minHeight="10.0" vgrow="SOMETIMES"/>
                                            </rowConstraints>
                                            <children>
                                                <GridPane>
                                                    <columnConstraints>
                                                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0"/>
                                                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="64.0"
                                                                           minWidth="64.0" prefWidth="64.0"/>
                                                    </columnConstraints>
                                                    <rowConstraints>
                                                        <RowConstraints minHeight="10.0" vgrow="SOMETIMES"/>
                                                    </rowConstraints>
                                                    <children>
                                                        <VBox alignment="CENTER_LEFT" minHeight="150.0" minWidth="200.0"
                                                              spacing="16.0">
                                                            <children>
                                                                <Label fx:id="incidentTitle"
                                                                       text="Titre de l'incident"/>
                                                                <Label fx:id="incidentLocalisation"
                                                                       text="Localisation de l'incident"/>
                                                                <Label fx:id="incidentDate" text="Date de l'incident"/>
                                                                <Label fx:id="incidentDescription"
                                                                       text="Description de l'incident"/>
                                                            </children>
                                                            <padding>
                                                                <Insets bottom="8.0" left="16.0" top="8.0"/>
                                                            </padding>
                                                        </VBox>
                                                        <AnchorPane GridPane.columnIndex="1">
                                                            <children>
                                                                <Label fx:id="importanceIncident"
                                                                       layoutX="1.0999755859375" layoutY="8.0"
                                                                       text="importance" textFill="#bf2323"
                                                                       AnchorPane.topAnchor="8.0"/>
                                                                <VBox alignment="BOTTOM_CENTER"
                                                                      layoutX="1.0999755859375" prefWidth="75.0"
                                                                      AnchorPane.bottomAnchor="0.0">
                                                                    <children>
                                                                        <Label fx:id="incidentScore" text="score"
                                                                               textFill="#49bc3c"/>
                                                                        <Button fx:id="upvoteIncidentButton"
                                                                                mnemonicParsing="false"
                                                                                onAction="#upvote" text="Upvote">
                                                                            <VBox.margin>
                                                                                <Insets bottom="8.0"/>
                                                                            </VBox.margin>
                                                                        </Button>
                                                                    </children>
                                                                </VBox>
                                                            </children>
                                                        </AnchorPane>
                                                    </children>
                                                </GridPane>
                                            </children>
                                        </GridPane>
                                    </children>
                                </VBox>
                            </content>
                            <padding>
                                <Insets top="8.0"/>
                            </padding>
                        </ScrollPane>
                        <Button fx:id="addIncidentButton" mnemonicParsing="false" onAction="#addIncident"
                                text="Déclarer un incident" AnchorPane.bottomAnchor="16.0"
                                AnchorPane.rightAnchor="16.0"/>
                    </children>
                </AnchorPane>
            </center>
        </BorderPane>
    </children>
</AnchorPane>
