<AnchorPane minHeight="800.0" minWidth="1280.0" prefHeight="800.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/9.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fr.polytech.ihm.IncidentController">
    <children>
        <BorderPane AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <top>
                <BorderPane maxHeight="50.0" prefHeight="50.0" BorderPane.alignment="CENTER">
                    <left>
                        <HBox alignment="CENTER" fillHeight="false" spacing="4.0" BorderPane.alignment="CENTER">
                            <children>
                                <TextField prefWidth="200.0" text="Search" />
                                <ComboBox fx:id="categoryIncident" prefWidth="150.0" promptText="Categorie" />
                                <ComboBox fx:id="locationIncident" prefWidth="150.0" promptText="Localisation" />
                                <ComboBox fx:id="resolutionIncident" prefWidth="150.0" promptText="Résolution" />
                            </children>
                        </HBox>
                    </left>
                    <right>
                        <Button fx:id="userButton" mnemonicParsing="false" onAction="#accessUserData" text="User" BorderPane.alignment="CENTER" />
                    </right>
                    <padding>
                        <Insets left="16.0" right="16.0" />
                    </padding>
                    <top>
                        <Label text="Liste des incidents" BorderPane.alignment="CENTER">
                            <font>
                                <Font size="24.0" />
                            </font>
                            <BorderPane.margin>
                                <Insets bottom="16.0" />
                            </BorderPane.margin>
                        </Label>
                    </top>
                    <BorderPane.margin>
                        <Insets top="16.0" />
                    </BorderPane.margin>
                    <center>
                        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="200.0" prefWidth="200.0">
                     <children>
                              <Button fx:id="addIncidentButton" layoutX="29.0" mnemonicParsing="false" onAction="#addIncident" text="Déclarer un incident" />
                     </children></AnchorPane>
                    </center>
                </BorderPane>
            </top>
            <center>
                <AnchorPane BorderPane.alignment="CENTER">
                    <children>
                  <HBox layoutX="11.0" layoutY="8.0" prefHeight="645.0" prefWidth="1251.0">
                     <children>
                        <ListView fx:id="listViewToDo" prefHeight="200.0" prefWidth="200.0" HBox.hgrow="ALWAYS" />
                        <ListView fx:id="listViewInProgress" prefHeight="200.0" prefWidth="200.0" HBox.hgrow="ALWAYS" />
                        <ListView fx:id="listViewDone" prefHeight="200.0" prefWidth="200.0" HBox.hgrow="ALWAYS" />
                     </children>
                  </HBox>
                    </children>
                </AnchorPane>
            </center>
        </BorderPane>
    </children>
